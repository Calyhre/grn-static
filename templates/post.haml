#templateContainer
  #templateHeader
    %h1
      \##{@c.edition} - #{@c.pubdate}
#templateBody
  %div
    .baseline
      %h3 Edito
      = @c.edito
      %br/
      %br/
      %em &nbsp; mose - the green ruby editor
      %br/
      %em &nbsp; xenor - the informer
      %br/
      \&nbsp;
      %a{:href => "http://greenruby.org", :target => "_self"} http://greenruby.org
      %br/
    - @c.topics.each do |t|
      %h2= t.title
      .baseline= t.baseline
      %table.meat{:border => "0", :cellpadding => "0", :cellspacing => "0"}
        - t.links.each do |l|
          %tr
            %td
              %a{:href => l.url}= l.title
              - if l.duration
                %span.duration
                  (#{l.duration})
            %td.date
              = l.pubdate
              - if l.tags
                - l.tags.each do |tag|
                  %img.icon{:align => "right", :alt => tag, :height => "18", :src => "ico/#{tag}.png", :width => "18"}/
          %tr
            %td.comment{:colspan => "2"}
              = l.comment
