
<h1>#<%= @c.edition %> - <%= @c.pubdate %></div>

<h2>Edito</h2>
<%= @c.edito %>
<br>
<br>
<em>&nbsp; mose - the green ruby editor</em><br>
<em>&nbsp;
<% if @c.contributors %>
	<%= @c.contributors %> - the informers
<% else %>
	xenor - the informer
<% end %>
</em><br>
&nbsp; <a href="http://greenruby.org" target="_self">http://greenruby.org</a>
<br>

<% @c.topics.each do |t| %>
<h3><%= t.title %></h3>
<div><%= t.baseline %></div>
<table cellpadding="0" cellspacing="0" border="0" width="100%">
<% t.links.each do |l| %>
<tr><td style="color:#aaaaaa;">
<a href="<%= l.url %>"><%= l.title %></a> <% if l.duration %><span>(<%= l.duration %>)</span><% end %>
</td><td style="color:#aaaaaa;">
<%= l.pubdate %>
<% if l.tags %><% l.tags.each do |tag| %>
<img class="icon" src="http://greenruby.org/ico/<%= tag %>.png" height="18" width="18" align="right" alt="<%= tag %>" />
<% end %><% end %>
</td></tr>
<tr><td colspan="2">
<%= l.comment %>
</td></tr>
<% end %>
</table>
<% end %>

